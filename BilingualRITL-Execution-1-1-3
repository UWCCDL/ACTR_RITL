(clear-all)

(define-model execution

(chunk-type ritl-stimulus x y)
(chunk-type ritl-instructions first second third)

(define-chunks ritl-stimulus x y)
(define-chunks ritl-instructions first second third)

(add-dm (stimulus isa ritl-stimulus 
x 5 
y 6))

(add-dm (inst isa ritl-instructions first add second half third double))

(set-buffer-chunk visual ritl-stimulus)

(p calculate-x
  ?imaginal>
    state        free
  =imaginal>
    isa          scratchpad
    x            nil
  =visual>
    isa          visual-object
    status       x
    value       =X

=goal>
    isa 

)
)